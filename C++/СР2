//2 задание ----------------------
#include <stdio.h>
#include <math.h>

int main (void) { 
    char ch;
    int a, b;
    float x;
    double y, z, U,F,L;
    ch = 'D';
    a = 2; b = 5;
    x = 5.5F;
    y = 6;
    z = ch + a + b + x + y;
    U = ch * a / b + (4*x) * 10 / y;
    F = ch + (x*y - a + b);
    L = ch * a + (b + x + y);

    // Результат приведения типов
    printf("\n\t The result of the conversion types: %lf\n", z);

    // Явное преобразование типов 
    z = (double) ch + (double) a + (double) b  + (double) x + y;

    printf("\n\t The apparent conversion types: %lf\n", z);
    z = sqrt((double)a/b);
    printf("\n\t z = sqrt(%d/%d) = %lf\n", a, b, z);
    printf("\n\t z = lg(%d/%d) = %lf\n", a, b, log10(z));
    printf("\n\t z = ln(%d/%d) = %lf\n", a, b, log(z));
    printf("\n\t U = %lf\n", U);
    printf("\n\t F = %lf\n", F);
    printf("\n\t L = %lf\n", L);
    z = 19; //наверное мой номер варианта
    printf("\n\t Логарифм от числа 10*номер вар. по основанию 2*ном.= %lf\n", log2(10 * z));
	return 0;

}


//3 задание ----------------------
#include <stdio.h>

// Для числа пи 
#define _USE_MATH_DEFINES
#include <math.h>

#include <limits.h>
#include <float.h>

int main (void){
    double R;
    double a, b, c;

    printf("\n Enter a real greater than zero: ");
    scanf("%lf", &R);
    a = M_PI*R*R;
    b = M_PI*R;
    c = M_PI*a*b;
    printf("\n A (Длина большей полуоси) = %g is %g", R, a);
    printf("\n B (Длина меньшей полуоси) = %g is %g",R,b);
    puts("");
    printf("\n Площадь эллипса = %g is %g",R,c);
    puts("");
    c = log10(exp(100));
    printf("\n lg(exp(100)) = %g is %g",R,c);
    c = log(exp(100));
    printf("\n ln(exp(100)) = %g is %g",R,c);
    puts("");

    printf("\n Максимальный интегер: %d\n ", INT_MAX);
    printf("Минимальный интегер: %d\n ", INT_MIN);
    puts("");
    printf(" Maximum real number of float: %g\n ", FLT_MAX);
    printf("Минимальное real number of float: %g\n ", FLT_MIN);
    puts("");
    printf(" Maximum real number type double: %g\n ", DBL_MAX);
    printf("Минимальное real number type double: %g\n ", DBL_MIN);
    puts("");
    printf(" Maximum real number type char: %g\n ", CHAR_MAX);
    printf("Минимальное real number type char: %g\n ", CHAR_MIN);
    puts("");
    printf(" Maximum real number type short: %g\n ", SHRT_MAX);
    printf("Минимальное real number type short: %g\n ", SHRT_MIN);
    puts("");
    printf(" Maximum real number type long: %g\n ", LONG_MAX);
    printf("Минимальное real number type long: %g\n ", LONG_MIN);
}
