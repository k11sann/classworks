#include <iostream>
#include <math.h>
using namespace std;

int main() {
    while(true){
        char x1;
        char x2;
        cout<<"\nВведите значение x1 : ";cin>>x1;
        cout<<"\nВведите значение x2 : ";cin>>x2;
        cout<<"\nx1 в int = "<<int(x1);
        cout<<"\nx2 в int = "<<int(x2);
        cout<<"\nСумма обоих int :"<<int(x1+x2);
        cout<<"\n-----------------------------------";
    }
    return 0;
}
